--C_ORDER
DROP TABLE C_ORDER
CASCADE CONSTRAINTS;

DROP SEQUENCE SEQ_ORDER;


CREATE TABLE C_ORDER(
	SEQ NUMBER(8) PRIMARY KEY,
	ID VARCHAR2(50) NOT NULL,
    MENUNAME VARCHAR2(500)NOT NULL,
	CUPSIZE VARCHAR2(50) NOT NULL,
	SYRUP VARCHAR2(50),
	SHOT NUMBER(8),
	WHIP NUMBER(8),
	CUPS NUMBER(8) NOT NULL,
	TOTAL NUMBER(20) NOT NULL,
    ODATE DATE NOT NULL
);
SELECT
    *
FROM C_ORDER;


CREATE SEQUENCE SEQ_ORDER
START WITH 2000
INCREMENT BY 1;

ALTER TABLE C_ORDER
ADD CONSTRAINT FK_ORDER_ID FOREIGN KEY(ID)
REFERENCES MEMBER(ID);

ALTER TABLE C_ORDER
ADD CONSTRAINT FK_ORDER_MENUNAME FOREIGN KEY(MENUNAME)
REFERENCES COFFEEMENU(MENUNAME);



select * from c_order;
