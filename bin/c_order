DROP TABLE C_ORDER
CASCADE CONSTRAINT;

DROP SEQUENCE SEQ_ORDER;

CREATE TABLE C_ORDER(
	SEQ NUMBER(8) PRIMARY KEY,
	ID VARCHAR2(50) NOT NULL,
	MENUNUM NUMBER(8) NOT NULL,
	CUPSIZE VARCHAR2(50) NOT NULL,
	SYRUP VARCHAR2(50),
	SHOT NUMBER(8),
	WHIP NUMBER(8),
	CUPS NUMBER(8) NOT NULL,
	TOTAL NUMBER(20) NOT NULL
);

CREATE SEQUENCE SEQ_ORDER
START WITH 2000
INCREMENT BY 1;

ALTER TABLE C_ORDER
ADD CONSTRAINT FK_ORDER_ID FOREIGN KEY(ID)
REFERENCES MEMBER(ID);



select * from c_order;





ALTER TABLE COFFEEMENU
DROP COLUMN C_SIZE;


CREATE SEQUENCE SEQ_ORDER
START WITH 1
INCREMENT BY 1;

DROP TABLE C_ORDER
CASCADE CONSTRAINT;

DROP SEQUENCE SEQ_ORDER;

CREATE TABLE C_ORDER(
	SEQ NUMBER(8) PRIMARY KEY,
    ORDER_SEQ NUMBER(8) NOT NULL,
	ID VARCHAR2(50) NOT NULL,
	MENUNUM NUMBER(8) NOT NULL,
	CUPSIZE VARCHAR2(50) NOT NULL,
	SYRUP VARCHAR2(50),
	SHOT NUMBER(8),
	WHIP NUMBER(8),
	CUPS NUMBER(8) NOT NULL,
	TOTAL NUMBER(20) NOT NULL
);


ALTER TABLE C_ORDER
ADD CONSTRAINT FK_ORDER_ID FOREIGN KEY(ID)
REFERENCES MEMBER(ID);

ALTER TABLE C_ORDER
ADD CONSTRAINT FK_ORDER_MENUNUM FOREIGN KEY(MENUNUM)
REFERENCES COFFEEMENU(MENUNUM);

ALTER TABLE NOWORDER
ADD CONSTRAINT FK_NOWORDER_SEQ FOREIGN KEY(SEQ)
REFERENCES C_ORDER(SEQ);



