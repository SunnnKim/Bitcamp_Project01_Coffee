--C_ORDER
DROP TABLE C_ORDER
CASCADE CONSTRAINTS;

DROP SEQUENCE SEQ_ORDER;


CREATE TABLE C_ORDER(
	SEQ NUMBER(8) PRIMARY KEY,
	ID VARCHAR2(50) NOT NULL,
	MENUNUM NUMBER(8) NOT NULL,
	CUPSIZE VARCHAR2(50) NOT NULL,
	SYRUP VARCHAR2(50),
	SHOT NUMBER(8),
	WHIP NUMBER(8),
	CUPS NUMBER(8) NOT NULL,
	TOTAL NUMBER(20) NOT NULL,
    ODATE DATE NOT NULL
);

CREATE SEQUENCE SEQ_ORDER
START WITH 2000
INCREMENT BY 1;

ALTER TABLE C_ORDER
ADD CONSTRAINT FK_ORDER_ID FOREIGN KEY(ID)
REFERENCES MEMBER(ID);

ALTER TABLE C_ORDER
ADD CONSTRAINT FK_ORDER_MENUNUM FOREIGN KEY(MENUNUM)
REFERENCES COFFEEMENU(MENUNUM);


select * from c_order;


-- COFFEEMENU

DROP TABLE COFFEEMENU
CASCADE CONSTRAINTS;

DROP SEQUENCE SEQ_COFFEEMENU;

CREATE TABLE COFFEEMENU(
	MENUNUM NUMBER(8) PRIMARY KEY,
	C_NAME VARCHAR2(500) NOT NULL,
	PRICE NUMBER(10) NOT NULL
)

CREATE SEQUENCE SEQ_COFFEEMENU
START WITH 1
INCREMENT BY 1;

SELECT * FROM COFFEEMENU;


